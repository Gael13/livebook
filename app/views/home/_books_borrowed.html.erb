<div class="row-fluid">
	<div class="col-md-12">
		<h3 class="title_books">Books I borrowed</h3> 
		<table class="table table-striped table-bordered">
		  <thead>
		    <tr>
		      <th class="title_books">Title</th>
		      <th class="title_books">Author</th>
		      <th class="title_books">Give back</th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% unless book.nil? %>
		    <% book.each do |b| %>
		      <tr>
		        <td><%= b.book.title %></td>
		        <td><%= b.book.author %></td>
		        <td id="borrow_btn" style="width:150px;">
		          <%= link_to "Give back", give_back_home_path(b), method: :delete, remote: true, data: { confirm: "Are you sure to give back the book ?"  } , :class => 'btn btn-primary btn-xs' %>
		          
		        </td>
		      </tr>
		    <% end %>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>
