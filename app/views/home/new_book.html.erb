<div class="row-fluid">
  <div class="col-md-12">
    <%= simple_form_for @book, url: create_book_home_index_path do |f| %>
      <div class="col-md-offset-4 col-md-4">
        <h4>Add a new book</h4>
        <%= render 'form', :f => f  %>
          <%= button_tag(type: 'submit', id: 'create_book', class: "btn btn-primary btn-xs") do %>
            <i class="fa fa-check"></i> Create Book
          <% end %>
          <%= link_to raw("#{fa_icon("times")} #{t("cancel")}"), home_index_path, class: "btn btn-default btn-xs" %>
      </div>
    <% end %>
  </div>
</div>